extends layout

block content
    br
    .row.container
        form(action="/user/add", method="post").col.s12
            .row
                .input-field.col.s6
                    input#first_name.validate(placeholder='Maxime', type='text', name="first_name")
                    label(for='first_name') Prénom
                .input-field.col.s6
                    input#last_name.validate(placeholder='Sénécal', type='text', name="last_name")
                    label(for='last_name') Nom
            .row
                .input-field.col.s12
                    input#username.validate(placeholder='Ex : maxime062', type='text', name="username")
                    label(for='username') username
            .row
                .input-field.col.s12
                    input#password.validate(type='password', name="password")
                    label(for='password') Mot de passe
            .row
                .input-field.col.s12
                    input#email.validate(type='email', name="email")
                    label(for='email') Email
            .row
                .col.s12
                    button.btn.waves-effect.waves-light(type='submit', name='action')
                        | Créer un compte
                        i.material-icons.right send