extends layout

block content
    br
    if message
        .container
            .chip
                | #{message}
                i.material-icons close
    .container
        .section
            .row
                table
                    thead
                        tr
                            th(data-field='name') Nom des fichiers
                            th(data-field='size') Taille (en octets)
                            th(data-field='type') Type
                            th.center-align(data-field='actions') Actions
                    tbody
                        if files
                            each file in files
                                tr
                                    td #{file.filename}
                                    td #{file.size}
                                    td #{file.mimetype}
                                    td.center-align
                                        if file.download
                                            a.btn.green.darken-1(href="#{file.path}", download="#{file.filename}")
                                                | Télécharger
                                        else
                                            .preloader-wrapper.small.active
                                                .spinner-layer.spinner-green-only
                                                    .circle-clipper.left
                                                        .circle
                                                    .gap-patch
                                                        .circle
                                                    .circle-clipper.right
                                                        .circle